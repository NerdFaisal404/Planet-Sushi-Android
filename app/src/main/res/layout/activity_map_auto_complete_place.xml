<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="@dimen/dp16">


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_eight"
            app:cardElevation="@dimen/dp_four"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_tweleve">

                <ImageView
                    android:id="@+id/imageViewSearch"
                    android:layout_width="@dimen/dp_twenty_four"
                    android:layout_height="@dimen/dp_twenty_four"
                    android:src="@drawable/ic_search" />

                <EditText
                    android:id="@+id/editTextSearch"
                    android:layout_width="match_parent"
                    android:layout_toRightOf="@+id/imageViewSearch"
                    android:layout_marginLeft="@dimen/dp_eight"
                    android:layout_height="wrap_content"
                    android:background="@null" />


                <TextView
                    android:id="@+id/tvClose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/bg_transparent_left_side_line"
                    android:fontFamily="@font/robot_regular"
                    android:paddingLeft="@dimen/dp_eight"
                    android:text="  Annuler"
                    android:textColor="@color/colorPink"
                    android:textSize="@dimen/sp16" />


            </RelativeLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_eight"/>

    </LinearLayout>
</layout>

