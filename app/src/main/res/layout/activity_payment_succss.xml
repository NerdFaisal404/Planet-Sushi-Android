<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <RelativeLayout
        android:background="@drawable/bg_home_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/dp16"
        tools:context=".ui.checkout.PaymentSuccssActivity">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <ImageView
                android:src="@drawable/ic_success"
                android:layout_width="90dp"
                android:layout_gravity="center"
                android:layout_height="90dp" />

            <TextView
                android:id="@+id/tvMerci"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="Merci!"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp16"
                android:textColor="@color/colorPrimary"
                android:gravity="center"
                android:textSize="@dimen/sp15"
                android:fontFamily="@font/roboto_medium" />

            <TextView
                android:id="@+id/tvOrderId"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="Votre commade #430 a bien ete enregistree!!"
                android:layout_gravity="center"
                android:textColor="@color/colorPrimary"
                android:gravity="center"
                android:textSize="@dimen/sp15"
                android:fontFamily="@font/roboto_medium" />


        </LinearLayout>

        <TextView
            android:id="@+id/tvClose"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:text="TERMINER"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:textSize="@dimen/sp18"
            android:fontFamily="@font/roboto_medium"
            android:background="@drawable/bg_round_pink"
            android:layout_height="51dp" />


    </RelativeLayout>

</layout>