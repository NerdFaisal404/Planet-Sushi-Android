<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F0F0F0"
        android:layout_marginTop="@dimen/dp8"
        android:layout_marginBottom="@dimen/dp8"
        android:orientation="vertical"
        android:padding="@dimen/dp16">

        <TextView
            android:id="@+id/tv_headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_horizontal_pink"
            android:drawablePadding="@dimen/dp10"
            android:fontFamily="@font/roboto_bold"
            android:text="YAKI NOVATION - BROCHETTES  "
            android:textColor="#394F61"
            android:textSize="@dimen/sp17" />

        <TextView
            android:id="@+id/tv_subHeadLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp5"
            android:drawablePadding="@dimen/dp10"
            android:fontFamily="@font/robot_regular"
            android:text="Choisissez vos 5 brochettes gratuites"
            android:textColor="#627588"
            android:textSize="@dimen/sp15" />


    </LinearLayout>

</layout>