<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_home_background"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="230dp">

                <ImageView
                    android:id="@+id/ivMenu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/shadow_inverse_expand" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp40"
                    android:padding="@dimen/dp_tweleve">


                    <ImageView
                        android:id="@+id/imageViewBackArrow"
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_back_arrow"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="@dimen/dp16"
                        android:layout_marginRight="@dimen/dp16"
                        android:layout_toLeftOf="@+id/imageViewFilter"
                        android:layout_toRightOf="@+id/imageViewBackArrow"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvDeliveryInfo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:drawableRight="@drawable/ic_drop_down"
                            android:drawablePadding="@dimen/dp10"
                            android:ellipsize="end"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="center_horizontal"
                            android:singleLine="true"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/sp16"
                            tools:text="Livrasion au 16 Cours ALber 1er" />

                        <TextView
                            android:id="@+id/tvLocationInfo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/robot_regular"
                            android:gravity="center_horizontal"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/sp14"
                            tools:text="Location" />


                    </LinearLayout>


                    <ImageView
                        android:id="@+id/imageViewFilter"
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_menu"
                        android:visibility="gone" />

                </RelativeLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerViewMenuTop"
                    android:layout_width="match_parent"
                    android:paddingLeft="@dimen/dp16"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true" />


            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerViewItems"
                android:paddingRight="@dimen/dp16"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


        </LinearLayout>

        <RelativeLayout
            android:id="@+id/priceLayout"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorPink"
            android:padding="@dimen/dp16"
            android:clickable="true"
            android:visibility="visible">


            <TextView
                android:id="@+id/tvCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:background="#D51982"
                android:fontFamily="@font/roboto_medium"
                android:paddingLeft="@dimen/dp14"
                android:paddingTop="@dimen/dp7"
                android:paddingRight="@dimen/dp14"
                android:paddingBottom="@dimen/dp7"
                android:text="1"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sp17" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/tvPrice"
                android:layout_toRightOf="@id/tvCount"
                android:ellipsize="end"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sp15"
                android:text="VOIR LA COMMANDE" />

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/robot_regular"
                android:paddingLeft="@dimen/dp14"
                android:paddingTop="@dimen/dp7"
                android:paddingRight="@dimen/dp14"
                android:paddingBottom="@dimen/dp7"
                android:text="25666 E"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sp17" />


        </RelativeLayout>

    </RelativeLayout>

</layout>

