<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewItemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_eight"
            android:fontFamily="@font/roboto_medium"
            android:padding="@dimen/dp_four"
            android:layout_marginLeft="@dimen/dp_four"
            android:text="Deepak"
            android:textColor="@color/color_394F61"
            android:textSize="@dimen/sp16" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewChild"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_eight"
            android:nestedScrollingEnabled="true"></android.support.v7.widget.RecyclerView>
    </LinearLayout>
</RelativeLayout>