<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:paddingLeft="@dimen/dp16"
    android:paddingRight="@dimen/dp16"
    android:background="@drawable/bg_home_image"
    android:id="@+id/view_list_main_content"
    android:layout_height="70dp">




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp5"
            android:paddingBottom="@dimen/dp5">

            <ImageView
                android:id="@+id/imageViewItem"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:scaleType="centerInside"
                tools:src="@drawable/ic_profile" />

            <ImageView
                android:id="@+id/imageViewItemAnim"
                android:layout_width="100dip"
                android:layout_height="60dip"
                android:layout_centerVertical="true"
                android:scaleType="centerInside"
                android:visibility="invisible"
                tools:src="@drawable/ic_profile" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_eight"
                android:layout_marginRight="@dimen/dp_eight"
                android:layout_toLeftOf="@+id/tvPrice"
                android:layout_toRightOf="@+id/imageViewItem"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/itemName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:text="TOP' HOTATE"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/color_394F61"
                    android:textSize="@dimen/sp16" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp">

                    <TextView
                        android:id="@+id/tvCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_eight"
                        android:fontFamily="@font/roboto_medium"
                        android:text="1X "
                        android:textColor="@color/colorPink"
                        android:textSize="@dimen/sp15" />

                    <TextView
                        android:id="@+id/tvPiece"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_light"
                        android:text="1 PIÈCE"
                        android:textColor="#627588"
                        android:textSize="@dimen/sp13" />
                </LinearLayout>

                <TextView
                    android:id="@+id/side_products_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hello items"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robot_regular"
                android:text="5,20 €"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textColor="#394F61"
                android:layout_marginRight="@dimen/dp5"
                android:textSize="@dimen/sp16" />

        </RelativeLayout>

</LinearLayout>