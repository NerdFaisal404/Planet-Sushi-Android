<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dp16">

    <TextView
        android:id="@+id/tv_headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp4"
        android:drawableLeft="@drawable/ic_horizontal_pink"
        android:drawablePadding="@dimen/dp10"
        android:fontFamily="@font/roboto_bold"
        android:text="#PLANETPINK"
        android:textColor="@color/colorDarkBlue"
        android:textSize="@dimen/sp24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_subHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/robot_regular"
        android:text="DE 0 À 150 PTS"
        android:textColor="@color/colorPink"
        android:textSize="14sp"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toStartOf="@+id/tv_headline"
        app:layout_constraintTop_toBottomOf="@+id/tv_headline" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_subHeader">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_view_header_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp16"
                android:text="VOTRE CAGNOTTE"
                android:textColor="@color/colorDarkBlue"
                android:fontFamily="@font/roboto_medium"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_view_text_sub_header_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp8"
                android:gravity="start"
                android:layout_marginTop="2dp"
                android:text="Dès 150 points bénéficiez de 15€ de bon d’achat à faire valoir sur votre prochaine commande."
                android:textColor="@color/colorDarkBlue"
                android:textSize="15sp"
                android:fontFamily="@font/robot_regular"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/text_view_header_1"
                app:layout_constraintTop_toBottomOf="@+id/text_view_header_1" />

            <TextView
                android:id="@+id/text_view_header_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp16"
                android:text="OFFRE 2ÈME COMMANDE"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/colorDarkBlue"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/text_view_text_sub_header_1"
                app:layout_constraintTop_toBottomOf="@+id/text_view_text_sub_header_1" />

            <TextView
                android:id="@+id/text_view_text_sub_header_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp8"
                android:gravity="start"
                android:text="5 € offert dès 30 € d’achat sur la 2ème commande."
                android:textColor="@color/colorDarkBlue"
                android:textSize="15sp"
                android:fontFamily="@font/robot_regular"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/text_view_header_2"
                app:layout_constraintTop_toBottomOf="@+id/text_view_header_2" />

            <TextView
                android:id="@+id/text_view_header_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp16"
                android:text="OFFRES EXCLUSIVES"
                android:textColor="@color/colorDarkBlue"
                android:textSize="16sp"
           android:fontFamily="@font/roboto_medium"
                app:layout_constraintStart_toStartOf="@+id/text_view_text_sub_header_2"
                app:layout_constraintTop_toBottomOf="@+id/text_view_text_sub_header_2" />

            <TextView
                android:id="@+id/text_view_text_sub_header_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp8"
                android:gravity="start"
                android:text="Recevez des offres exceptionnelles Planet Sushi par email ou par SMS."
                android:textColor="@color/colorDarkBlue"
                android:textSize="15sp"
                android:fontFamily="@font/robot_regular"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/text_view_header_3"
                app:layout_constraintTop_toBottomOf="@+id/text_view_header_3" />

        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>