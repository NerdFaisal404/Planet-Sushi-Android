<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_bottom_home"
        android:orientation="vertical"
        android:padding="@dimen/dp16">

        <TextView
            android:id="@+id/tv_headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_horizontal_pink"
            android:drawablePadding="@dimen/dp10"
            android:fontFamily="@font/roboto_bold"
            android:text="Monnaie à prévoir"
            android:textColor="#394F61"
            android:textSize="@dimen/sp24" />

        <TextView
            android:id="@+id/tv_subHeadLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp5"
            android:drawablePadding="@dimen/dp10"
            android:fontFamily="@font/robot_regular"
            android:text="Veuillez indiquer le montant à prévoir en cas de livraison. Nos restaurants ne rendent pas la monnaie sur les tickets restaurants."
            android:textColor="#627588"
            android:textSize="@dimen/sp15" />

        <TextView
            android:id="@+id/buttonNoChange"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:layout_marginTop="@dimen/dp20"
            android:background="@drawable/bg_round_stroke_pink"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:text="Pas de monnaie"
            android:textColor="@color/colorPink"
            android:textSize="@dimen/sp17" />

        <TextView
            android:id="@+id/buttonSpecifyAnAmount"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:layout_marginTop="@dimen/dp16"
            android:background="@drawable/bg_round_pink"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:text="Préciser un montant"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/sp17" />


    </LinearLayout>

</layout>