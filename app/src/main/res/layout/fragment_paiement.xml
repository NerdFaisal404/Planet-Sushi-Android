<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/dp16"
        android:paddingTop="@dimen/dp10"
        android:paddingRight="@dimen/dp16"
        android:paddingBottom="@dimen/dp16"
        tools:context=".ui.checkout.paiement.PaiementFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.gms.maps.MapView
                    android:id="@+id/mapView"
                    android:layout_width="86dp"
                    android:layout_height="86dp"
                    android:layout_alignParentLeft="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp16"
                    android:layout_toRightOf="@id/mapView"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvCountryCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:text="75008 Paris"
                        android:textColor="#394F61"
                        android:textSize="@dimen/sp14" />

                    <TextView
                        android:id="@+id/tvAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp4"
                        android:fontFamily="@font/robot_regular"
                        android:text="16 Cours Albert 1er"
                        android:textColor="#394F61"
                        android:textSize="@dimen/sp14" />

                    <TextView
                        android:id="@+id/tvHouse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp4"
                        android:fontFamily="@font/robot_regular"
                        android:text="Étage 5, interphone Riman"
                        android:textColor="#394F61"
                        android:textSize="@dimen/sp14" />


                </LinearLayout>


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/dp10"
                android:background="#D8D8D8" />

            <RelativeLayout
                android:id="@+id/layoutAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10">

                <ImageView
                    android:id="@+id/ivDelivery"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:layout_marginRight="@dimen/dp10"
                    android:background="@drawable/bg_oval_darker_grey"
                    android:padding="@dimen/dp8"
                    android:src="@drawable/ic_scooter_white" />

                <TextView
                    android:id="@+id/tvDeliveryTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/ivDownArrow"
                    android:layout_toRightOf="@+id/ivDelivery"
                    android:ellipsize="end"
                    android:fontFamily="@font/robot_regular"
                    android:singleLine="true"
                    android:text="Livraison prévue pour 21h30"
                    android:textColor="#394F61"
                    android:textSize="@dimen/sp16" />

                <ImageView
                    android:id="@+id/ivDownArrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp10"
                    android:src="@drawable/ic_down_arrow" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/dp10"
                android:background="#D8D8D8" />

            <RelativeLayout
                android:id="@+id/layoutCardTop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/tvChanger"
                    android:ellipsize="end"
                    android:fontFamily="@font/roboto_medium"
                    android:singleLine="true"
                    android:text="Paiement par carte"
                    android:textColor="#394F61"
                    android:textSize="@dimen/sp16" />

                <TextView
                    android:id="@+id/tvChanger"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp10"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Changer"
                    android:textColor="@color/colorPink"
                    android:textSize="@dimen/sp16" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/layoutCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10">

                <ImageView
                    android:id="@+id/ivCardIcon"
                    android:layout_width="21dp"
                    android:layout_height="@dimen/dp15"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp10"
                    android:src="@drawable/ic_card" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_marginRight="@dimen/dp10"
                    android:layout_toLeftOf="@+id/ivDownArrowCard"
                    android:layout_toRightOf="@+id/ivCardIcon"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp10"
                        android:fontFamily="@font/roboto_medium"
                        android:text="Visa"
                        android:textColor="@color/color_394F61"
                        android:textSize="@dimen/sp15" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp10"
                        android:fontFamily="@font/robot_regular"
                        android:text="Terminant par ••••7658 "
                        android:textColor="#627588"
                        android:textSize="@dimen/sp15" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/ivDownArrowCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp10"
                    android:src="@drawable/ic_down_arrow" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/dp10"
                android:background="#D8D8D8" />

        </LinearLayout>
    </ScrollView>


</layout>