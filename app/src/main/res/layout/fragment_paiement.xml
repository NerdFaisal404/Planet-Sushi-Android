<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.checkout.paiement.PaiementFragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10">

            <com.google.android.gms.maps.MapView
                android:id="@+id/mapView"
                android:layout_width="86dp"
                android:layout_height="86dp"
                android:layout_alignParentLeft="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp16"
                android:layout_toRightOf="@id/mapView"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvCountryCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="#394F61"
                    android:textSize="@dimen/sp14"
                    tools:text="75008 Paris" />

                <TextView
                    android:id="@+id/tvAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/robot_regular"
                    android:textColor="#394F61"
                    android:textSize="@dimen/sp14"
                    tools:text="16 Cours Albert 1er" />

                <TextView
                    android:id="@+id/tvHouse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/robot_regular"
                    android:textColor="#394F61"
                    android:textSize="@dimen/sp14"
                    tools:text="Étage 5, interphone Riman" />


            </LinearLayout>


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/dp10"
            android:background="#D8D8D8" />

        <RelativeLayout
            android:id="@+id/layoutAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10">

            <ImageView
                android:id="@+id/ivDelivery"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_marginRight="@dimen/dp10"
                android:background="@drawable/bg_oval_darker_grey"
                android:padding="@dimen/dp8"
                android:src="@drawable/ic_scooter_white" />

            <TextView
                android:id="@+id/tvDeliveryTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:fontFamily="@font/robot_regular"
                android:textColor="#394F61"
                android:text="Livraison prévue pour 21h30"
                android:layout_centerVertical="true"
                android:textSize="@dimen/sp16"
                android:layout_toLeftOf="@+id/ivDownArrow"
                android:layout_toRightOf="@+id/ivDelivery" />

            <ImageView
                android:layout_marginLeft="@dimen/dp10"
                android:id="@+id/ivDownArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_down_arrow" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/dp10"
            android:background="#D8D8D8" />

        <RelativeLayout
            android:id="@+id/layoutAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10">

            <ImageView
                android:id="@+id/ivDelivery"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_marginRight="@dimen/dp10"
                android:background="@drawable/bg_oval_darker_grey"
                android:padding="@dimen/dp8"
                android:src="@drawable/ic_scooter_white" />

            <TextView
                android:id="@+id/tvDeliveryTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:fontFamily="@font/robot_regular"
                android:textColor="#394F61"
                android:text="Livraison prévue pour 21h30"
                android:layout_centerVertical="true"
                android:textSize="@dimen/sp16"
                android:layout_toLeftOf="@+id/ivDownArrow"
                android:layout_toRightOf="@+id/ivDelivery" />

            <ImageView
                android:layout_marginLeft="@dimen/dp10"
                android:id="@+id/ivDownArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_down_arrow" />

        </RelativeLayout>


    </LinearLayout>

</layout>